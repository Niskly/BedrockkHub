{
  "cleanUrls": true,
  "rewrites": [
    { "source": "/login", "destination": "/pages/auth/login" },
    { "source": "/signup", "destination": "/pages/auth/signup" },
    { "source": "/verify", "destination": "/pages/auth/verify" },
    { "source": "/complete-profile", "destination": "/pages/auth/complete-profile" },
    { "source": "/forgot-password", "destination": "/pages/auth/forgot-password" },
    { "source": "/update-password", "destination": "/pages/auth/update-password" },
    { "source": "/skineditor", "destination": "/pages/tools/skineditor" },
    { "source": "/capeeditor", "destination": "/pages/tools/capeeditor" },
    { "source": "/texturepacks", "destination": "/pages/content/texturepacks" },
    { "source": "/packs", "destination": "/pages/content/packs" },
    { "source": "/news", "destination": "/pages/content/news" },
    { "source": "/profile", "destination": "/pages/content/profile" },
    { "source": "/settings", "destination": "/pages/settings" },
    { "source": "/faq", "destination": "/pages/info/faq" },
    { "source": "/contact", "destination": "/pages/info/contact" },
    { "source": "/report", "destination": "/pages/info/report" }
  ],
  "headers": [
    {
      "source": "/(.*)\\.(css|js|png|jpg|jpeg|gif|svg|webp|woff2)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
